@using TrustlessClientWeb.Models
@model NewStatement


<div>
    <h4>Make new stateSment.</h4>
    <div class="row">
        <form action="/Home/NewStatementAction" method="post">
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.Drug1, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Drug1, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.Drug2, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Drug2, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <input type="submit" value="Submit statement" class="btn btn-default" />
            </div>
        </form>
    </div>
    <hr />
</div>

